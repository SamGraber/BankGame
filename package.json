{
  "name": "bank-game",
  "version": "1.0.0",
  "scripts": {
    "typings": "typings install && cd ./server && typings install",
    "postinstall": "npm run typings",
    "clean": "gulp clean.app && gulp clean.server",
    "build": "npm run clean && tsc",
    "build.watch": "tsc -w",
    "build-server": "cd ./server && tsc",
    "build-server.watch": "cd ./server && tsc -w",
    "build-all": "npm run build && npm run build-server",
    "build-all.watch": "concurrently \"npm run build.watch\" \"npm run build-server.watch\"",
    "test": "concurrently \"npm run build-all.watch\" \"karma start\"",
    "database": "mongod --dbpath ./data",
    "lite": "lite-server",
    "http": "http-server",
    "server": "node ./server/run.js",
    "start": "npm run build-server && concurrently \"npm run database\" \"npm run build.watch\" \"npm run server\" "
  },
  "license": "ISC",
  "dependencies": {
    "angular2": "^2.0.0-beta.12",
    "body-parser": "^1.15.0",
    "cookie-parser": "^1.4.1",
    "ejs": "^2.4.1",
    "es6-promise": "^3.1.2",
    "es6-shim": "^0.35.0",
    "express": "^4.13.4",
    "jquery": "^2.2.3",
    "karma-sinon": "^1.0.4",
    "lodash": "^4.11.1",
    "mongodb": "^1.4.4",
    "monk": "^1.0.1",
    "morgan": "^1.7.0",
    "reflect-metadata": "^0.1.3",
    "rxjs": "^5.0.0-beta.3",
    "serve-favicon": "^2.3.0",
    "sinon": "^1.17.3",
    "systemjs": "0.19.25",
    "toastr": "^2.1.2",
    "typescript-angular-utilities": "^3.0.2",
    "zone.js": "^0.6.6"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "concurrently": "^2.0.0",
    "del": "^2.2.0",
    "gulp": "^3.9.1",
    "karma": "^0.13.22",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^0.2.3",
    "karma-firefox-launcher": "^0.1.7",
    "karma-mocha": "^0.2.2",
    "karma-systemjs": "^0.13.0",
    "lite-server": "^2.1.0",
    "mocha": "^2.4.5",
    "typescript": "^1.6.2",
    "typings": "^0.7.9"
  }
}
